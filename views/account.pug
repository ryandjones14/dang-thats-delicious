extends layout

block content
  .inner
    form.form(action=`/account` method="POST" class="card")
      h2 edit urself
      label(for="name") name
      input(type="name" name="name" value=`${user.name}`)
      label(for="email") email
      input(type="email" name="email" value=`${user.email}`)
      input.button(type="submit" value="save changes")